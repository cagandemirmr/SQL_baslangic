import sqlite3 as sql


baglanti=sql.connect("veritabani.db")
my_cursor=baglanti.cursor()

kayitlar="SELECT * FROM ogrenci WHERE vize BETWEEN 90 AND 100"
my_cursor.execute(kayitlar)

sonuclar=my_cursor.fetchall()

print(sonuclar)
baglanti.close()
